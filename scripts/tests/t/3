#####
#
# Test Three: Basic test of building and displaying test output.
#
# Markup is done with CGI.pm. The key to remember that it's just
# html.
# 
#####

# The test data
%OMNITEST = (
	'cmd' => '
create:{$OUTDIR}/{$TESTNAME}.omni
loadHDF5seg:{$DATADIR}3.h5
loadHDF5chann:{$DATADIR}3.h5
quit
		'
		,
	'finish' => '$SUCCESS = -e "{$OUTDIR}/{$TESTNAME}.omni.files" && sane();'
		,
	'markup' => '$MARKUP = start_html("Test: {$TESTNAME}"). 
					h1("Test: {$TESTNAME} ".result()).
						"<a href=\"{$OUTDIR}/{$TESTNAME}.omni.files/\">resultant omni</a>".
			       end_html();'
);

1; # Perl requires truth in evaluation so it is possible to add additional sanity checks here.
#  # EOF
