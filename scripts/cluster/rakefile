# Proposed template rakefile for the automated build of omni.
#
#
  namespace "main" do
    task :buildbox do
      puts "Starting..."

      # Update source as buildbox.
      puts "Downloading source..."
      # Build cluster specific tool chain.
      puts "Building toolchain..."
    end

    namespace "superuser" do
      task :buildbox => "rake:main:buildbox" do
        puts "Installing..."
        # Install cluster specific toolchain.
      end
    end

    namespace "omni" do
      task :buildbox => "rake:main:buildbox" do
        puts "Instantiating..."
        # Bootstrap omni.
        # Mesh buildbox.omni.
      end
    end

    namespace "execute" do
      task :buildbox => "rake:main:omni:buildbox" do
        puts "Loading Omni..."
      end
    end
  end

task :default => ["main:execute:buildbox"]
task :update => ["main:superuser:buildbox"]

